{{> navbar}}

<div class="appNav">
	<div class="appNavInner">
		<div class="wikiwebLogo">
			<a href="/">
				<span>WikiWeb</span>
			</a>
		</div>
		<form id="askform" class="searchBox" action="/search" method="get">
			<input
				type="text"
				id="email"
				name="q"
				placeholder="Ask or Search the WikiWeb"
				onkeypress="searchOnEnter()"
			></input>
			<input id="navbarSearchButton" class="submitButton" type="submit" value="Submit"></input>
		</form>
		<div class="pageButtons">
			<div class="pageButton">
				<div class="buttonContents currentPage">
					<span class="icon">
						<i class="fa fa-hand-paper-o" aria-hidden="true"></i>
					</span>
					<span class="text">Requests</span>
				</div>
			</div>
			<div class="pageButton">
				<div class="buttonContents">
					<span class="icon">
						<i class="fa fa-bullseye" aria-hidden="true"></i>
					</span>
					<span class="text">Connections</span>
				</div>
			</div>
			<div class="pageButton">
				<div class="buttonContents">
					<span class="icon">
						<i class="fa fa-bell-o" aria-hidden="true"></i>
					</span>
					<span class="text">Notifications</span>
				</div>
			</div>
			<div class="pageButton">
				<div class="buttonContents">
					<span class="userImg">
						<img src="/static/img/profile.jpg" class="userImg" />
					</span>
					<span class="text">User</span>
				</div>
			</div>
		</div>
	</div>
</div>
{{> messages}}

<div class="homePage">
	{{> modal}}
	<div class="contentWrapper">
		<div class="layout_3col_left">
			<h3 class="title">
				<div class="title_with_link">
					Feeds
				</div>
			</h3>
			<div class="pagedList">
				<div class="pagedListItem top_stories nav_item_selected">
					<ul>
						<li>
							<a href="/">Top Stories</a>
						</li>
					</ul>
				</div>
				<div class="pagedListItem new_requests">
					<ul>
						<li>
							<a href="/">New Requests</a>
						</li>
					</ul>
				</div>
				<div class="pagedListItem new_connections">
					<ul>
						<li>
							<a href="/">New Connections</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="layout_3col_center">
			<div class="section_header">
				<div class="header_text">
					<span>Top Connections For You</span>
				</div>
			</div>

				<div class="addQuestionPrompt">
					<div class='inner'>
						<span class="nameWithPhoto">
							<span>
								<img class="profile_photo_img" src="/static/img/profile.jpg" />
							</span>
							<span>
								Eoin McMillan
							</span>
						</span>
					</div>
					<a class="askQuestionButton" onClick=openRecommendationsModal()>
						<div class="inner">
							<span>What could you use a recommendation for?</span>
						</div>
					</a>
				</div>

				{{> homefeedconnection}}
				
				{{#each pages}}
					{{> homefeedrequest}}
				{{/each}}

				
				{{toJSON pages}}
			</div>

			<div class="layout_3col_right">
				<div class="identityModule">
					<div class="top_rail"></div>
					<div class="actor">
						<div class="profile_img_box">
							<img class="profile_img" src="/static/img/example_profile.jpg"/>
						</div>
						<div class="actor_info">
							<div class="fullname">
								<a>Eoin McMillan</a>
							</div>
							<div class="title">Partner @ SFDevLabs
							</div>
						</div>
					</div>
					<div class="stats">
						<div class="number">56</div>
						<div class="text">Requests</div>
						<div class="divider"></div>
						<div class="number">1096</div>
						<div class="text">Connections</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{{{{rawHelper}}}}
	<script id='validateTmpl' type="text/template">
		<img src="{{icon}}"></img>
		{{title}}
		{{description}}
	</script>
{{{{/rawHelper}}}}


