{{#section 'head'}}
    <link rel="stylesheet" href="/static/css/auth.css">
{{/section}}

<div class="loginPage">
  <div class="container">
    <form method="POST" action="/login" class="form-signin">
      <img src="/static/img/logo.png" />
      <a href="/signup" style="float: right; color: #333;">Sign Up</a>
      <h2 class="form-signin-heading">Please log in</h2>

      {{#if errorMessage}}
        <div class="alert alert-danger">
          {{errorMessage}}
        </div>
      {{/if}}
      <input type="text" id="inputUsername" name="username" class="form-control" placeholder="Username or Email" required autofocus>
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
      <br />
      <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
    </form>
  </div>
</div>

<div style="width: 100%; display: block;">
  <div style="display: table; margin-top: 50px; margin-left: auto; margin-right: auto;">
    <img src="/static/img/cluster.png" style="width: 250px;"/>
  </div>
</div>
{{#section 'foot'}}
<script type="application/javascript" src="/static/js/main.js"></script>
{{/section}}