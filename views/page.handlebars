{{> navbar navIndex='page'}}

<div class="resultPage">
	{{> modalconnect}}
	{{> messages}}
	<div class="contentWrapper">
		<div class="layout_3col_left">
			<div class="pagedList">
				<h3 class="title">
					<div class="title_with_link">
						Topics
					</div>
				</h3>
				{{#if page.isParsed}}
					<input hidden type="checkbox" id="isParsed" checked>
				{{else}}
					<p>Spinner</p>
					<input hidden type="checkbox" id="isParsed">
				{{/if}}
				{{#each tags}}
					<div class="pagedListItem top_stories">
						<ul>
							<li>
								<a data-label="{{this.label}}" class="topicLink" href="?topic={{this.label}}">{{this.label}} (1)</a>
							</li>
						</ul>
					</div>
				{{/each}}
			</div>
			<div style="margin-top: 10px; width: 100%; color: white; text-align: center;">
				<a class="askQuestionButton" onClick=openConnectModal()>
					<div class="connectButton" style="width: 100%">
						Add Connection
					</div>
				</a>
			</div>
		</div>
		<div class="layout_3col_center">
			{{> pageCard }}
			{{#if destinations}}
				{{#each destinations}}
					{{> pageConnection }}
				{{/each}}
			{{else}}
				<div style="margin-top: 30px;">
					<b>There are no connections to this page yet. Be the first to add one!</b>
				</div>
			{{/if}}

		</div>
		<div class="layout_3col_right">
			{{#if connectionUsers}}
  			<div class="section_header" style="margin-bottom: 8px;">
          <div class="header_text">
            <span>Contributors</span>
          </div>
        </div>
				{{#each connectionUsers}}
				{{!-- {{toJSON this}} --}}
				<div class="contributorsBox" title="{{this.displayName}}">
					<span><img src="{{avatarNotNull this.avatar}}" style="height: 22px; width: 22px;" /></span>
					<span>{{this.displayName}}</span>
				</div>
				{{/each}}
				{{!-- {{toJSON connectionUsers}} --}}
			{{/if}}
		</div>
	</div>
</div>

{{#section 'foot'}}
