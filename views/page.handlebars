{{> navbar navIndex='page'}}

<div class="resultPage">
	{{> modalconnect}}
	{{> messages}}
	<div class="contentWrapper">
		<div class="layout_3col_left">
			<h3 class="title">
				<div class="title_with_link">
					Topics
				</div>
			</h3>
			<div class="pagedList">
				<div class="pagedListItem top_stories">
					<ul>
						<li>
							<a href="/">Bartholemu (6)</a>
						</li>
					</ul>
				</div>
				<div class="pagedListItem new_requests">
					<ul>
						<li>
							<a href="/">Optimus (4)</a>
						</li>
					</ul>
				</div>
				<div class="pagedListItem new_connections">
					<ul>
						<li>
							<a href="/">Prime (1)</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="layout_3col_center">
			{{> pageCard }}
			{{#if destinations}}
				{{#each destinations}}
					{{> pageConnection }}
				{{/each}}
			{{else}}
				<div style="margin-top: 30px;">
					<b>There are no connections to this page yet. Be the first to add one!</b>
				</div>
			{{/if}}

		</div>
		<div class="layout_3col_right"></div>
	</div>
</div>

{{{{rawHelper}}}}
	<script id="validateTmpl" type="text/template">
    <div content="" style="border-bottom: 1px solid #ddd; margin-top: 10px; margin-bottom: 10px;"></div>
    <div style="display: flex; flex-direction: row;">
      <div style="justify-content: flex-start;">
        <div style="
          width: 100%;
          overflow: hidden;
          word-wrap: break-word;
          font-weight: bold;
          line-height: 1.3;
          color: #262626;
          font-size: 18px;
          padding: 0;
          margin-top: 8px;
          border: 0;
          box-shadow: none;
          padding-bottom: 8px;
          overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 2;"
          >{{title}}</div>
        <div style="
          font-family: 'q_serif',Georgia,Times,'Times New Roman',serif;
          font-size: 15px;
          line-height: 1.6;
          color: #333;
          overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 2;
        ">{{description}}</div>
      </div>
      <div style="justify-content: flex-end">
        {{#if icon}}
        <img style="height: 32px;" src="{{icon}}" />
        {{/if}}
      </div>
    </div>
  </script>
{{{{/rawHelper}}}}

