<div class="modalMask" id='modalMask' onclick=closeRecommendationsModal()></div>
<div class="requestModal" id='requestModal'>
  <form id="askform" action="new" method="post">
    <div class="modalContent">
      <div class="closeButton" onclick=closeRecommendationsModal()>
        <i class="fa fa-times" aria-hidden="true"></i>
      </div>
      <div class="contentBox">
        <span class="userImg">
          <img src="/static/img/profile.jpg" />
        </span>
        <div>
          <span class="username underlineOnHover">Eoin McMillan</span>
          <span class="text">requests</span>
        </div>
      </div>
        <div class="questionBox">
          <textarea
            id="questionInput"
            type="text"
            name="uri"
            placeholder="What needs recommendations? (paste url)"
            autofocus='true'
          >{{inputURI}}</textarea>
          <input id="questionPageId" name="id" type="hidden" ></input>
        </div>
      <div id="validateSection"></div>
    </div>
    <div class="modalFooter">
      <div class="cancel underlineOnHover" onclick=closeRecommendationsModal()>Cancel</div>
      <input class="modalSubmitButton" disabled="true" type="submit" value="Ask for Connections"></input>
    </div>
  </form>
</div>

{{{{rawHelper}}}}
  <script id="validateTmpl" type="text/template">
    <div content="" style="border-bottom: 1px solid #ddd; margin-top: 10px; margin-bottom: 10px;"></div>
    <div style="display: flex; flex-direction: row;">
      <div style="justify-content: flex-start;">
        <div style="
          width: 100%;
          overflow: hidden;
          word-wrap: break-word;
          font-weight: bold;
          line-height: 1.3;
          color: #262626;
          font-size: 16px;
          padding: 0;
          margin-top: 8px;
          border: 0;
          box-shadow: none;
          padding-bottom: 8px;
          overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 2;"
          >{{title}}</div>
        <div style="
          font-family: 'q_serif',Georgia,Times,'Times New Roman',serif;
          font-size: 15px;
          line-height: 1.6;
          color: #333;
          overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 2;
        ">{{description}}</div>
      </div>
      <div style="justify-content: flex-end">
        {{#if icon}}
        <img style="height: 32px;" src="{{icon}}" />
        {{/if}}
      </div>
    </div>
  </script>

  <script id="invalidTmpl" type="text/template">
    <div content="" style="border-bottom: 1px solid #ddd; margin-top: 10px; margin-bottom: 10px;"></div>
    <div style="display: flex; flex-direction: row;">
      <div style="justify-content: flex-start;">
        <div style="
          width: 100%;
          overflow: hidden;
          word-wrap: break-word;
          font-weight: bold;
          line-height: 1.3;
          color: red;
          font-size: 16px;
          padding: 0;
          margin-top: 8px;
          border: 0;
          box-shadow: none;
          padding-bottom: 8px;
          overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 2;"
          >Please enter valid url</div>
      </div>
    </div>
  </script>
{{{{/rawHelper}}}}