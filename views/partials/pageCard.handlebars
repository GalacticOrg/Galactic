<div class="pageCard">
  <div class="articleContentBox">
  	<div class="articleContent">
			<div class="titleURL">
				{{page.title}}
			</div>
			<div class="pageUrl">
				<span>{{page.pageUrl}}</span>
			</div>
			<div class="explanatoryText">
				{{page.description}}
			</div>
		</div>
		<div class="articleImg">
			<img src={{this.icon}}>
		</div>
	</div>
	<div class="actionBar">
		<a class="askQuestionButton" onClick=openRecommendationsModal()>
			<div class="connectButton">
				Connect
			</div>
		</a>
	</div>
</div>