{{#if navIndex}}
<div id="appNav" data-navIndex={{navIndex}}>
{{else}}
<div id="appNav" data-navIndex="">
{{/if}}
	<div class="appNavInner">
		<div class="wikiwebLogo">
			<a href="/">
				<span>WikiWeb</span>
			</a>
		</div>
		<form id="askform" class="searchBox" action="/search" method="get">
			<input
				type="text"
				id="email"
				name="q"
				value="{{inputURI}}"
				placeholder="Search (paste URL)"
			></input>
			<input id="navbarSearchButton" class="submitButton" type="submit" value="Submit"></input>
		</form>
		<div class="pageButtons" style="width: 100%;">
			<div class="pageButton">
				<div class="buttonContents" id="connectionsNavButton">
					<span class="icon">
						<i class="fa fa-bullseye" aria-hidden="true"></i>
					</span>
					<a href="/connections" class="text">Activity</a>
				</div>
			</div>
			<div class="pageButton" style="cursor: not-allowed;">
				<div class="buttonContents" id="notificationsNavButton">
					<span class="icon">
						<i class="fa fa-bell-o" aria-hidden="true"></i>
					</span>
					<span class="text">Notifications</span>
				</div>
			</div>

			{{#if user}}
			<a href="/profile" class="pageButton" style="margin-left: 50px;">
				<div class="buttonContents profileImgButton" id="userNavButton" style="justify-content: flex-end;">
					<span class="userImg">
						<img src={{avatarNotNull user.avatar}} class="userImg" />
					</span>
					<span class="text">{{user.username}}</span>
				</div>
			</a>
			{{else}}
			<a href="/login" class="pageButton" style="margin-left: 50px;">
				<div class="buttonContents profileImgButton" id="userNavButton" style="justify-content: flex-end;">
					<span class="userImg"></span> {{!-- blank --}}
					<span class="text">Login</span>
				</div>
			</a>
			{{/if}}
		</div>
	</div>
</div>

{{#section 'foot'}}
	<script type="application/javascript" src="/static/js/main.js"></script>
{{/section}}

